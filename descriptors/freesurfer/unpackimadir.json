{
  "tool-version": "1.0.0",
  "name": "unpackimadir",
  "author": "Placeholder",
  "description": "Unpack image directories.",
  "command-line": "unpackimadir [SOURCE_DIR] [TARGET_DIR]",
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "-src",
      "description": "Source directory containing the images to be unpacked",
      "value-key": "[SOURCE_DIR]",
      "type": "String",
      "optional": false,
      "id": "source_directory",
      "name": "Source Directory"
    },
    {
      "command-line-flag": "-targ",
      "description": "Target directory where the unpacked images will be stored",
      "value-key": "[TARGET_DIR]",
      "type": "String",
      "optional": false,
      "id": "target_directory",
      "name": "Target Directory"
    }
  ],
  "container-image": {
    "type": "docker",
    "image": "place/holder"
  }
}