{
  "tool-version": "1.0.0",
  "name": "inflate_subject-lh",
  "author": "Placeholder",
  "description": "A tool to process and inflate left hemisphere subject data in FreeSurfer",
  "command-line": "inflate_subject-lh [INPUT_FOLDER] [HOSTNAME_FLAG]",
  "container-image": {
    "type": "docker",
    "image": "place/holder"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "Input folder containing subject data",
      "value-key": "[INPUT_FOLDER]",
      "type": "String",
      "optional": false,
      "id": "input_folder",
      "name": "Input Folder"
    },
    {
      "command-line-flag": "hostname",
      "description": "Flag to check hostname",
      "value-key": "[HOSTNAME_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "hostname_flag",
      "name": "Hostname Flag"
    }
  ]
}