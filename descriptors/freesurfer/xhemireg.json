{
  "name": "xhemireg",
  "description": "Tool for hemisphere registration in neuroimaging.",
  "command-line": "xhemireg [SUBJECT] [OUTPUT_DIR] [MAP_LH_FLAG] [MAP_RH_FLAG] [PERFORM_REG_FLAG] [TAL_COMPUTE_FLAG] [NO_TAL_COMPUTE_FLAG] [TAL_ESTIMATE_FLAG] [NO_TAL_ESTIMATE_FLAG] [GCAPREP_SEG_XFM] [THREADS] [VERSION_FLAG] [HELP_FLAG]",
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "Subject ID for the hemisphere registration process",
      "value-key": "[SUBJECT]",
      "type": "String",
      "optional": false,
      "id": "subject",
      "name": "Subject ID",
      "command-line-flag": "--s"
    },
    {
      "description": "Output directory for the hemisphere registration",
      "value-key": "[OUTPUT_DIR]",
      "type": "String",
      "optional": true,
      "id": "output_dir",
      "name": "Output Directory",
      "command-line-flag": "--o"
    },
    {
      "description": "Map from left hemisphere to right hemisphere",
      "value-key": "[MAP_LH_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "map_lh",
      "name": "Map LH to RH",
      "command-line-flag": "--lh"
    },
    {
      "description": "Map from right hemisphere to left hemisphere",
      "value-key": "[MAP_RH_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "map_rh",
      "name": "Map RH to LH",
      "command-line-flag": "--rh"
    },
    {
      "description": "Perform registration to create sphere.reg",
      "value-key": "[PERFORM_REG_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "perform_reg",
      "name": "Perform Registration",
      "command-line-flag": "--reg"
    },
    {
      "description": "Recompute Talairach registration",
      "value-key": "[TAL_COMPUTE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "tal_compute",
      "name": "Talairach Compute",
      "command-line-flag": "--tal-compute"
    },
    {
      "description": "Do not perform Talairach registration",
      "value-key": "[NO_TAL_COMPUTE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "no_tal_compute",
      "name": "No Talairach Compute",
      "command-line-flag": "--no-tal-compute"
    },
    {
      "description": "Compute estimate of Talairach registration from unflipped registration",
      "value-key": "[TAL_ESTIMATE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "tal_estimate",
      "name": "Talairach Estimate",
      "command-line-flag": "--tal-estimate"
    },
    {
      "description": "Do not perform estimation of Talairach registration",
      "value-key": "[NO_TAL_ESTIMATE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "no_tal_estimate",
      "name": "No Talairach Estimate",
      "command-line-flag": "--no-tal-estimate"
    },
    {
      "description": "Prepare GCA for training symmetrical GCA atlases",
      "value-key": "[GCAPREP_SEG_XFM]",
      "type": "String",
      "optional": true,
      "id": "gcaprep",
      "name": "GCA Preparation",
      "command-line-flag": "--gcaprep"
    },
    {
      "description": "Number of threads used, applicable with --gcaprep option",
      "value-key": "[THREADS]",
      "type": "Number",
      "optional": true,
      "id": "threads",
      "name": "Threads",
      "command-line-flag": "--threads"
    },
    {
      "description": "Print version and exit",
      "value-key": "[VERSION_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "version",
      "name": "Version Flag",
      "command-line-flag": "--version"
    },
    {
      "description": "Print help and exit",
      "value-key": "[HELP_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "help",
      "name": "Help Flag",
      "command-line-flag": "--help"
    }
  ],
  "author": "Placeholder",
  "tool-version": "1.0.0",
  "container-image": {
    "type": "docker",
    "image": "place/holder"
  }
}