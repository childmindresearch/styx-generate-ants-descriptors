{
  "name": "talairach_avi",
  "description": "Front-end for Avi Snyder's image registration tool. Computes the Talairach transform that maps the input volume to the MNI average_305.",
  "schema-version": "0.5",
  "command-line": "talairach_avi --i [INPUT_FILE] --xfm [OUTPUT_XFM] [ATLAS] [LOG] [DEBUG_FLAG]",
  "inputs": [
    {
      "description": "Input volume",
      "value-key": "[INPUT_FILE]",
      "type": "File",
      "optional": false,
      "id": "input_file",
      "name": "Input File",
      "command-line-flag": "--i"
    },
    {
      "description": "Output transform file",
      "value-key": "[OUTPUT_XFM]",
      "type": "String",
      "optional": false,
      "id": "output_xfm",
      "name": "Output XFM",
      "command-line-flag": "--xfm"
    },
    {
      "description": "Alternate target atlas (in freesurfer/average dir)",
      "value-key": "[ATLAS]",
      "type": "String",
      "optional": true,
      "id": "atlas",
      "name": "Atlas",
      "command-line-flag": "--atlas"
    },
    {
      "description": "Log file. Default is outdir/talairach_avi.log",
      "value-key": "[LOG]",
      "type": "String",
      "optional": true,
      "id": "log",
      "name": "Log File",
      "command-line-flag": "--log"
    },
    {
      "description": "Turn on debugging",
      "value-key": "[DEBUG_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "debug",
      "name": "Debug Flag",
      "command-line-flag": "--debug"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT_XFM]",
      "description": "Output transform file",
      "optional": false,
      "id": "output_xfm_file",
      "name": "Output XFM File"
    }
  ],
  "tool-version": "1.0.0",
  "author": "Placeholder",
  "container-image": {
    "type": "docker",
    "image": "place/holder"
  }
}