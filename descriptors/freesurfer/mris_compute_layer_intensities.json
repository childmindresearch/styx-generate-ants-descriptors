{
  "name": "mris_compute_layer_intensities",
  "tool-version": "1.0.0",
  "description": "Computes intensity overlays for specified cortical layers based on input volumes and surfaces.",
  "command-line": "mris_compute_layer_intensities [INPUT_INTENSITY_VOLUME] [LAYER_VOLUME_FRACTIONS_FILE] [INPUT_SURFACE] [OUTPUT_OVERLAY]",
  "schema-version": "0.5",
  "inputs": [
    {
      "id": "input_intensity_volume",
      "name": "Input Intensity Volume",
      "description": "The input intensity volume file.",
      "type": "File",
      "optional": false,
      "value-key": "[INPUT_INTENSITY_VOLUME]"
    },
    {
      "id": "layer_volume_fractions_file",
      "name": "Layer Volume Fractions File",
      "description": "The layer volume fractions file.",
      "type": "File",
      "optional": false,
      "value-key": "[LAYER_VOLUME_FRACTIONS_FILE]"
    },
    {
      "id": "input_surface",
      "name": "Input Surface",
      "description": "The input surface file for layer intensity computation.",
      "type": "File",
      "optional": false,
      "value-key": "[INPUT_SURFACE]"
    },
    {
      "id": "output_overlay",
      "name": "Output Overlay",
      "description": "The output file where the overlay will be saved.",
      "type": "String",
      "optional": false,
      "value-key": "[OUTPUT_OVERLAY]"
    }
  ],
  "output-files": [
    {
      "id": "output_overlay_file",
      "name": "Output Overlay File",
      "description": "The output overlay file generated by the tool.",
      "optional": false,
      "path-template": "[OUTPUT_OVERLAY]"
    }
  ],
  "author": "Placeholder",
  "container-image": {
    "type": "docker",
    "image": "place/holder"
  }
}