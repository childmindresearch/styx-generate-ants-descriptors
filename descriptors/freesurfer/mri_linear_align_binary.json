  "schema-version": "0.5",
  "inputs": [
    {
      "description": "Source image file",
      "value-key": "[SOURCE]",
      "type": "File",
      "optional": false,
      "id": "source",
      "name": "Source"
    },
    {
      "description": "Target image file",
      "value-key": "[TARGET]",
      "type": "File",
      "optional": false,
      "id": "target",
      "name": "Target"
    },
    {
      "description": "Output transformation file",
      "value-key": "[OUTPUT_XFORM]",
      "type": "String",
      "optional": false,
      "id": "output_xform",
      "name": "Output Transformation"
