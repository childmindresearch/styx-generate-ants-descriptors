{
  "tool-version": "1.0.0",
  "name": "fs_update",
  "author": "Placeholder",
  "description": "Utility to update the FreeSurfer installation",
  "command-line": "fs_update [UPDATE_PATH] [HELP_FLAG]",
  "container-image": {
    "type": "docker",
    "image": "place/holder"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "Path to specific files or directories to update, copied recursively",
      "value-key": "[UPDATE_PATH]",
      "type": "String",
      "optional": true,
      "id": "update_path",
      "name": "Update Path"
    },
    {
      "description": "Show help",
      "command-line-flag": "-h",
      "value-key": "[HELP_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "help_short",
      "name": "Help Short Flag"
    },
    {
      "command-line-flag": "-help",
      "value-key": "[HELP_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "help_medium",
      "name": "Help Medium Flag"
    },
    {
      "command-line-flag": "--help",
      "value-key": "[HELP_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "help_long",
      "name": "Help Long Flag"
    }
  ]
}