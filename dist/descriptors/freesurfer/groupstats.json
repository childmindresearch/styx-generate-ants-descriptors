{
  "tool-version": "7.4.1",
  "name": "groupstats",
  "author": "FreeSurfer Developers",
  "description": "FreeSurfer is a software package for the analysis and visualization of neuroimaging data from cross-sectional and longitudinal studies. It is developed by the Laboratory for Computational Neuroimaging at the Martinos Center for Biomedical Imaging.\n\nFreeSurfer provides full processing streams for structural and functional MRI and includes tools for linear and nonlinear registration, cortical and subcortical segmentation, cortical surface reconstruction, statistical analysis of group morphometry, diffusion MRI, PET analysis, and much more. It is also the structural MRI analysis software of choice for the Human Connectome Project.",
  "command-line": "groupstats [OUTDIR] [GROUP_FSGD_OR_SUBJECTFILE] [SMOOTHING_LEVELS] [SUBJECTS_DIR] [MAP_NAME] [SRCSURFREG] [OUTPUT_OPTIONS...]",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "--o",
      "description": "Output folder",
      "value-key": "[OUTDIR]",
      "type": "String",
      "optional": false,
      "id": "outdir",
      "name": "Output directory"
    },
    {
      "command-line-flag": "--fsgd",
      "description": "Specify the FSGD file for the group",
      "value-key": "[GROUP_FSGD_OR_SUBJECTFILE]",
      "type": "File",
      "optional": true,
      "id": "group_fsgd",
      "name": "Group FSGD file"
    },
    {
      "command-line-flag": "--f",
      "description": "Subject list file",
      "value-key": "[GROUP_FSGD_OR_SUBJECTFILE]",
      "type": "File",
      "optional": true,
      "id": "subjectfile",
      "name": "Subject file"
    },
    {
      "command-line-flag": "--fwhm",
      "description": "Specify smoothing level(s)",
      "value-key": "[SMOOTHING_LEVELS]",
      "type": "Number",
      "optional": true,
      "list": true,
      "id": "fwhm",
      "name": "FWHM smoothing levels"
    },
    {
      "command-line-flag": "--sd",
      "description": "Subject directory",
      "value-key": "[SUBJECTS_DIR]",
      "type": "String",
      "optional": true,
      "id": "subject_dir",
      "name": "Subjects directory"
    },
    {
      "command-line-flag": "--m",
      "description": "Use the given map name",
      "value-key": "[MAP_NAME]",
      "type": "String",
      "optional": true,
      "id": "mapname",
      "name": "Map name"
    },
    {
      "command-line-flag": "--srcsurfreg",
      "description": "Source surface registration (default is sphere.reg)",
      "value-key": "[SRCSURFREG]",
      "type": "String",
      "optional": true,
      "id": "srcsurfreg",
      "name": "Source surface registration"
    },
    {
      "command-line-flag": "--no-maps",
      "description": "Only analyze ROI data",
      "value-key": "[OUTPUT_OPTIONS...]",
      "type": "Flag",
      "optional": true,
      "id": "no_maps",
      "name": "No maps option"
    },
    {
      "command-line-flag": "--lh",
      "description": "Only analyze left hemisphere",
      "value-key": "[OUTPUT_OPTIONS...]",
      "type": "Flag",
      "optional": true,
      "id": "lh_only",
      "name": "Left hemisphere only"
    },
    {
      "command-line-flag": "--rh",
      "description": "Only analyze right hemisphere",
      "value-key": "[OUTPUT_OPTIONS...]",
      "type": "Flag",
      "optional": true,
      "id": "rh_only",
      "name": "Right hemisphere only"
    },
    {
      "command-line-flag": "--no-aparcstats",
      "description": "Do not compute aparcstats",
      "value-key": "[OUTPUT_OPTIONS...]",
      "type": "Flag",
      "optional": true,
      "id": "no_aparcstats",
      "name": "No aparcstats"
    },
    {
      "command-line-flag": "--no-asegstats",
      "description": "Do not compute asegstats",
      "value-key": "[OUTPUT_OPTIONS...]",
      "type": "Flag",
      "optional": true,
      "id": "no_asegstats",
      "name": "No asegstats"
    },
    {
      "command-line-flag": "--no-wparcstats",
      "description": "Do not compute wmparcstats",
      "value-key": "[OUTPUT_OPTIONS...]",
      "type": "Flag",
      "optional": true,
      "id": "no_wparcstats",
      "name": "No wmparcstats"
    },
    {
      "command-line-flag": "--no-stats",
      "description": "Do not perform any ROI stats",
      "value-key": "[OUTPUT_OPTIONS...]",
      "type": "Flag",
      "optional": true,
      "id": "no_stats",
      "name": "No ROI stats"
    },
    {
      "command-line-flag": "--new",
      "description": "Append .new.mris_make_surfaces to map names",
      "value-key": "[OUTPUT_OPTIONS...]",
      "type": "Flag",
      "optional": true,
      "id": "new",
      "name": "New map names"
    },
    {
      "command-line-flag": "--base",
      "description": "Sets measure thickness area volume curvature sulcus (excludes white-gray percentage)",
      "value-key": "[OUTPUT_OPTIONS...]",
      "type": "Flag",
      "optional": true,
      "id": "base",
      "name": "Base measures option"
    },
    {
      "command-line-flag": "--keep53",
      "description": "Keep 5.3 aseg names (e.g., Thalamus-Proper)",
      "value-key": "[OUTPUT_OPTIONS...]",
      "type": "Flag",
      "optional": true,
      "id": "keep53",
      "name": "Keep 5.3 aseg names"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTDIR]/<output_file>.ext",
      "description": "Output files generated by groupstats.",
      "optional": true,
      "id": "output_files",
      "name": "Output files"
    }
  ],
  "url": "https://github.com/freesurfer/freesurfer"
}