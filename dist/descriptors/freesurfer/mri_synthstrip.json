{
  "tool-version": "7.4.1",
  "name": "mri_synthstrip",
  "author": "FreeSurfer Developers",
  "description": "FreeSurfer is a software package for the analysis and visualization of neuroimaging data from cross-sectional and longitudinal studies. It is developed by the Laboratory for Computational Neuroimaging at the Martinos Center for Biomedical Imaging.\n\nFreeSurfer provides full processing streams for structural and functional MRI and includes tools for linear and nonlinear registration, cortical and subcortical segmentation, cortical surface reconstruction, statistical analysis of group morphometry, diffusion MRI, PET analysis, and much more. It is also the structural MRI analysis software of choice for the Human Connectome Project.",
  "command-line": "mri_synthstrip -i [IMAGE] [-o [OUT]] [-m [MASK]] [-g [GPU_FLAG]] [-b [BORDER]] [--no-csf [NO_CSF_FLAG]] [--model [MODEL]]",
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "-i",
      "description": "Input image to skullstrip.",
      "value-key": "[IMAGE]",
      "type": "File",
      "optional": false,
      "id": "image",
      "name": "Input image"
    },
    {
      "command-line-flag": "-o",
      "description": "Save stripped image to path.",
      "value-key": "[OUT]",
      "type": "File",
      "optional": true,
      "id": "output_image",
      "name": "Output image"
    },
    {
      "command-line-flag": "-m",
      "description": "Save binary brain mask to path.",
      "value-key": "[MASK]",
      "type": "File",
      "optional": true,
      "id": "mask",
      "name": "Output brain mask"
    },
    {
      "command-line-flag": "-g",
      "description": "Use the GPU.",
      "value-key": "[GPU_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "gpu",
      "name": "Use GPU"
    },
    {
      "command-line-flag": "-b",
      "description": "Mask border threshold in mm. Default is 1.",
      "value-key": "[BORDER]",
      "type": "Number",
      "optional": true,
      "id": "border",
      "name": "Mask border threshold",
      "default-value": 1
    },
    {
      "command-line-flag": "--no-csf",
      "description": "Exclude CSF from brain border.",
      "value-key": "[NO_CSF_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "exclude_csf",
      "name": "Exclude CSF"
    },
    {
      "command-line-flag": "--model",
      "description": "Alternative model weights.",
      "value-key": "[MODEL]",
      "type": "File",
      "optional": true,
      "id": "model_weights",
      "name": "Model weights"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUT]",
      "description": "Stripped brain image output.",
      "optional": true,
      "id": "output_image_file",
      "name": "Output image file"
    },
    {
      "path-template": "[MASK]",
      "description": "Binary brain mask output.",
      "optional": true,
      "id": "output_mask_file",
      "name": "Output mask file"
    }
  ],
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}