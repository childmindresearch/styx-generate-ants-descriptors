{
  "tool-version": "7.4.1",
  "name": "exvivo-hemi-proc",
  "description": "FreeSurfer is a software package for the analysis and visualization of neuroimaging data from cross-sectional and longitudinal studies. It is developed by the Laboratory for Computational Neuroimaging at the Martinos Center for Biomedical Imaging.\n\nFreeSurfer provides full processing streams for structural and functional MRI and includes tools for linear and nonlinear registration, cortical and subcortical segmentation, cortical surface reconstruction, statistical analysis of group morphometry, diffusion MRI, PET analysis, and much more. It is also the structural MRI analysis software of choice for the Human Connectome Project.",
  "command-line": "exvivo-hemi-proc [FLASHDIR] [OUTDIR] [SUBJECT] [HEMISPHERE_FLAG] [SUPTENT_FLAG] [NO_ROTATE_FLAG] [T1THRESH] [THREADS] [CHECK_ONLY_FLAG] [PREP_ONLY_FLAG] [MASK_ONLY_FLAG] [SAMSEG_ONLY_FLAG] [STOP_MMPPSP_AFTER] [FORCE_FLAG]",
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "--i",
      "description": "Path to the FLASH data directory.",
      "value-key": "[FLASHDIR]",
      "type": "String",
      "optional": false,
      "id": "flashdir",
      "name": "Flash Directory"
    },
    {
      "command-line-flag": "--o",
      "description": "Output directory where results will be saved.",
      "value-key": "[OUTDIR]",
      "type": "String",
      "optional": false,
      "id": "outdir",
      "name": "Output Directory"
    },
    {
      "command-line-flag": "--s",
      "description": "Full path to the subject.",
      "value-key": "[SUBJECT]",
      "type": "String",
      "optional": false,
      "id": "subject",
      "name": "Subject Path"
    },
    {
      "command-line-flag": "--lh",
      "description": "Process left hemisphere.",
      "value-key": "[HEMISPHERE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "left_hemi",
      "name": "Left Hemisphere Flag"
    },
    {
      "command-line-flag": "--rh",
      "description": "Process right hemisphere.",
      "value-key": "[HEMISPHERE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "right_hemi",
      "name": "Right Hemisphere Flag"
    },
    {
      "command-line-flag": "--suptent",
      "description": "Indicate no tentorium (cblum and bstem) in the sample.",
      "value-key": "[SUPTENT_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "suptent",
      "name": "Supratentorial Flag"
    },
    {
      "command-line-flag": "--no-rotate",
      "description": "Indicate rotation is not needed.",
      "value-key": "[NO_ROTATE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "no_rotate",
      "name": "No Rotate Flag"
    },
    {
      "command-line-flag": "--t1thresh",
      "description": "T1 threshold, default is 415.",
      "value-key": "[T1THRESH]",
      "type": "Number",
      "optional": true,
      "id": "t1thresh",
      "name": "T1 Threshold"
    },
    {
      "command-line-flag": "--threads",
      "description": "Number of threads to use.",
      "value-key": "[THREADS]",
      "type": "Number",
      "optional": true,
      "id": "threads",
      "name": "Threads"
    },
    {
      "command-line-flag": "--check-only",
      "description": "Only perform check, without further processing.",
      "value-key": "[CHECK_ONLY_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "check_only",
      "name": "Check Only Flag"
    },
    {
      "command-line-flag": "--prep-only",
      "description": "Only run up to manual rotation.",
      "value-key": "[PREP_ONLY_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "prep_only",
      "name": "Prep Only Flag"
    },
    {
      "command-line-flag": "--mask-only",
      "description": "Only run up to creation of masks.",
      "value-key": "[MASK_ONLY_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "mask_only",
      "name": "Mask Only Flag"
    },
    {
      "command-line-flag": "--samseg-only",
      "description": "Only run up to samseg.",
      "value-key": "[SAMSEG_ONLY_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "samseg_only",
      "name": "Samseg Only Flag"
    },
    {
      "command-line-flag": "--stop-mmppsp-after",
      "description": "Stop processing after a specific step {tess,fix,preaparc,sphere,spherereg,white,pial}.",
      "value-key": "[STOP_MMPPSP_AFTER]",
      "type": "String",
      "optional": true,
      "id": "stop_mmppsp_after",
      "name": "Stop after step"
    },
    {
      "command-line-flag": "--force",
      "description": "Force the execution, overriding checks.",
      "value-key": "[FORCE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "force",
      "name": "Force Execution Flag"
    }
  ],
  "author": "FreeSurfer Developers",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}