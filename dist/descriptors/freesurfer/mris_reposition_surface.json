{
  "tool-version": "7.4.1",
  "name": "mris_reposition_surface",
  "author": "FreeSurfer Developers",
  "description": "FreeSurfer is a software package for the analysis and visualization of neuroimaging data from cross-sectional and longitudinal studies. It is developed by the Laboratory for Computational Neuroimaging at the Martinos Center for Biomedical Imaging.\n\nFreeSurfer provides full processing streams for structural and functional MRI and includes tools for linear and nonlinear registration, cortical and subcortical segmentation, cortical surface reconstruction, statistical analysis of group morphometry, diffusion MRI, PET analysis, and much more. It is also the structural MRI analysis software of choice for the Human Connectome Project.",
  "command-line": "mris_reposition_surface [SURF] [VOLUME] [POINTS] [OUTPUT] [SIZE] [SIGMA] [ITERATIONS]",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "-s",
      "description": "Input surface",
      "value-key": "[SURF]",
      "type": "File",
      "optional": false,
      "id": "surf",
      "name": "Input surface"
    },
    {
      "command-line-flag": "-v",
      "description": "Input volume",
      "value-key": "[VOLUME]",
      "type": "File",
      "optional": false,
      "id": "volume",
      "name": "Input volume"
    },
    {
      "command-line-flag": "-p",
      "description": "Input points",
      "value-key": "[POINTS]",
      "type": "File",
      "optional": false,
      "id": "points",
      "name": "Input points"
    },
    {
      "command-line-flag": "-o",
      "description": "Output surface filename",
      "value-key": "[OUTPUT]",
      "type": "String",
      "optional": false,
      "id": "output",
      "name": "Output surface"
    },
    {
      "command-line-flag": "-z",
      "description": "Size parameter for repositioning. Default is 1.",
      "value-key": "[SIZE]",
      "type": "Number",
      "default-value": 1,
      "optional": true,
      "id": "size",
      "name": "Size"
    },
    {
      "command-line-flag": "-g",
      "description": "Sigma. Default is 2.0.",
      "value-key": "[SIGMA]",
      "type": "Number",
      "default-value": 2.0,
      "optional": true,
      "id": "sigma",
      "name": "Sigma"
    },
    {
      "command-line-flag": "-i",
      "description": "Number of iterations. Default is 1.",
      "value-key": "[ITERATIONS]",
      "type": "Number",
      "default-value": 1,
      "optional": true,
      "id": "iterations",
      "name": "Iterations"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT]",
      "description": "Output surface file",
      "optional": false,
      "id": "output_surface",
      "name": "Output surface file"
    }
  ],
  "url": "https://github.com/freesurfer/freesurfer"
}