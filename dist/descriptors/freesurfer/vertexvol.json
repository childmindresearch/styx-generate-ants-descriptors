{
  "tool-version": "7.4.1",
  "name": "vertexvol",
  "description": "FreeSurfer is a software package for the analysis and visualization of neuroimaging data from cross-sectional and longitudinal studies. It is developed by the Laboratory for Computational Neuroimaging at the Martinos Center for Biomedical Imaging.\n\nFreeSurfer provides full processing streams for structural and functional MRI and includes tools for linear and nonlinear registration, cortical and subcortical segmentation, cortical surface reconstruction, statistical analysis of group morphometry, diffusion MRI, PET analysis, and much more. It is also the structural MRI analysis software of choice for the Human Connectome Project.",
  "command-line": "vertexvol --s [SUBJECT] [HEMISPHERE] [OUTPUT] [TH3_OPTION]",
  "schema-version": "0.5",
  "inputs": [
    {
      "description": "Subject identifier",
      "value-key": "[SUBJECT]",
      "command-line-flag": "--s",
      "type": "String",
      "optional": false,
      "id": "subject",
      "name": "Subject"
    },
    {
      "description": "Select left hemisphere",
      "value-key": "[HEMISPHERE]",
      "command-line-flag": "--lh",
      "type": "Flag",
      "optional": true,
      "id": "left_hemisphere",
      "name": "Left Hemisphere"
    },
    {
      "description": "Select right hemisphere",
      "value-key": "[HEMISPHERE]",
      "command-line-flag": "--rh",
      "type": "Flag",
      "optional": true,
      "id": "right_hemisphere",
      "name": "Right Hemisphere"
    },
    {
      "description": "Output file name, default is ?h.volume",
      "value-key": "[OUTPUT]",
      "command-line-flag": "--o",
      "type": "String",
      "optional": true,
      "id": "output_file",
      "name": "Output File",
      "default-value": "?h.volume"
    },
    {
      "description": "Use TH3 method for computation",
      "value-key": "[TH3_OPTION]",
      "command-line-flag": "--th3",
      "type": "Flag",
      "optional": true,
      "id": "use_th3",
      "name": "Use TH3"
    },
    {
      "description": "Don't use TH3 method for computation",
      "value-key": "[TH3_OPTION]",
      "command-line-flag": "--no-th3",
      "type": "Flag",
      "optional": true,
      "id": "no_th3",
      "name": "No TH3"
    }
  ],
  "output-files": [
    {
      "path-template": "[OUTPUT]",
      "description": "Output file containing vertex-wise volume",
      "optional": true,
      "id": "output_volume_file",
      "name": "Output Volume File"
    }
  ],
  "author": "FreeSurfer Developers",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}