{
  "name": "fs_temp_file",
  "tool-version": "7.4.1",
  "description": "FreeSurfer is a software package for the analysis and visualization of neuroimaging data from cross-sectional and longitudinal studies. It is developed by the Laboratory for Computational Neuroimaging at the Martinos Center for Biomedical Imaging.\n\nFreeSurfer provides full processing streams for structural and functional MRI and includes tools for linear and nonlinear registration, cortical and subcortical segmentation, cortical surface reconstruction, statistical analysis of group morphometry, diffusion MRI, PET analysis, and much more. It is also the structural MRI analysis software of choice for the Human Connectome Project.",
  "command-line": "fs_temp_file [BASE_DIR] [SUFFIX] [SCRATCH_FLAG] [HELP_FLAG]",
  "schema-version": "0.5",
  "inputs": [
    {
      "command-line-flag": "-b",
      "description": "Manually specify base temporary directory.",
      "value-key": "[BASE_DIR]",
      "type": "String",
      "optional": true,
      "id": "base_dir",
      "name": "Base Directory"
    },
    {
      "command-line-flag": "--base",
      "description": "Manually specify base temporary directory.",
      "value-key": "[BASE_DIR]",
      "type": "String",
      "optional": true,
      "id": "base_dir_alt",
      "name": "Base Directory (Alternative)"
    },
    {
      "command-line-flag": "-s",
      "description": "Optional file suffix.",
      "value-key": "[SUFFIX]",
      "type": "String",
      "optional": true,
      "id": "suffix",
      "name": "File Suffix"
    },
    {
      "command-line-flag": "--suffix",
      "description": "Optional file suffix.",
      "value-key": "[SUFFIX]",
      "type": "String",
      "optional": true,
      "id": "suffix_alt",
      "name": "File Suffix (Alternative)"
    },
    {
      "command-line-flag": "--scratch",
      "description": "Use /scratch directory if available, but FS_TMPDIR takes priority.",
      "value-key": "[SCRATCH_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "scratch",
      "name": "Scratch Directory Flag"
    },
    {
      "command-line-flag": "-h",
      "description": "Print help text and exit.",
      "value-key": "[HELP_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "help",
      "name": "Help Flag"
    },
    {
      "command-line-flag": "--help",
      "description": "Print help text and exit.",
      "value-key": "[HELP_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "help_alt",
      "name": "Help Flag (Alternative)"
    }
  ],
  "author": "FreeSurfer Developers",
  "container-image": {
    "type": "docker",
    "image": "freesurfer/freesurfer:7.4.1"
  },
  "url": "https://github.com/freesurfer/freesurfer"
}